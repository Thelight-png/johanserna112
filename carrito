    <script>
        const products = [
            { name: "aretes", price: 10000, image: " aretes.jpg" },
            { name: "collares", price: 45000, image: "collares.jpg" },
            { name: "manillas", price: 18000, image: "manillas.webp" },
            { name: "rubor", price: 9000, image: "rubor.jpg" },
            { name: "marcadores", price: 120000, image: "marcadores.jpg" },
            { name: "labial", price: 30000, image: "labial.jpg" },
            { name: "sombras", price: 7000, image: "sombras.webp" },
            { name: "difumino", price: 15000, image: "difumino.jpg" },
            { name: "bitacoras", price: 6000, image: "bitacoreas.webp" },
            { name: "tinta china", price: 14000, image: "tinta china.jpg" },
            { name: "lapices", price: 8000, image: "lapices.jpg" },
            { name: "vinilos", price: 5500, image: "vinilos.png" },
            { name: "pinceles", price: 4000, image: "pinceles.webp" },
            { name: "borradores", price: 1000, image: "borradores.jpg" },
            { name: "delineador", price: 5000, image: "delineador.webp" }
        ];

        const container = document.getElementById("products");
        const quantities = Array(products.length).fill(0);

        products.forEach((product, i) => {
            container.innerHTML += `
                <div class="card">
                    <img src="${product.image}" alt="${product.name}">
                    <div class="title">${product.name}</div>
                    <div class="price">$${product.price}</div>

                    <div class="controls">
                        <button onclick="decrease(${i})">-</button>
                        <div class="quantity" id="quantity-${i}">0</div>
                        <button onclick="increase(${i})">+</button>
                    </div>

                    <div class="total">
                        Total: $<span id="total-${i}">0</span>
                    </div>
                </div>
            `;
        });

        function increase(i) {
            quantities[i]++;
            update(i);
        }

        function decrease(i) {
            if (quantities[i] > 0) {
                quantities[i]--;
                update(i);
            }
        }

        function update(i) {
            document.getElementById(`quantity-${i}`).textContent = quantities[i];
            document.getElementById(`total-${i}`).textContent =
                quantities[i] * products[i].price;
        }
    </script>
<div class="carrito-card" onclick="mostrarConfirmacion()">
